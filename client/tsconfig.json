{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": "src",
    "sourceMap": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "lib": ["DOM"],
    "composite": true,
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "types": ["jest"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "*.d.ts"]
}
