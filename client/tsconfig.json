{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": "src",
    "module": "ES2020",
    "sourceMap": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "lib": ["DOM"],
    "composite": true,
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "types": ["jest", "vite/client", "vite-plugin-svgr/client"]
  },
  "include": ["src", "./test-setup.ts"],
  "exclude": ["node_modules", "dist", "*.d.ts"]
}
